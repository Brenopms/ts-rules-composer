{
  "name": "ts-rules-composer",
  "version": "0.0.1",
  "description": "Typescript rules engine by composition",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Breno Magalhaes",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsup",
    "format": "prettier \"src/**/*.ts\" --check",
    "format:fix": "prettier \"src/**/*.ts\" --write",
    "lint": "eslint ./src/",
    "lint:fix": "eslint --fix ./src",
    "test": "run-s build test:*",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "vitest",
    "generate-docs": "typedoc ./src --githubPages --includeVersion --out ./genDocs",
    "release": "semantic-release"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitest/coverage-v8": "^3.1.2",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cspell": "^8.19.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "gh-pages": "^6.3.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^8.0.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}